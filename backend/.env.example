# Application Settings
PROJECT_NAME="GWorkspace Analyzer API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Database
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Google OAuth & Gmail API
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/callback"

# JWT Settings
SECRET_KEY="your-secret-key-here"  # Generate with: openssl rand -hex 32
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Service (SendGrid or AWS SES)
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
FROM_EMAIL="noreply@gworkspaceanalyzer.com"

# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRICE_ID="price_your-price-id"  # For $49/month subscription

# Google Cloud Vision API (for OCR - Phase 2)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# OpenAI API (for GPT-4o Mini invoice extraction)
OPENAI_API_KEY="sk-your-openai-api-key"

# Feature Flags
ENABLE_OCR=false
ENABLE_WEEKLY_EMAILS=false
USE_GPT_EXTRACTION=true  # Use GPT-4o Mini for invoice extraction (recommended)

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"
